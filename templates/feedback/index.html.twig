{# templates/feedback/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Feedback Form{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Feedback Form</h1>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="form-group">
            {{ form_row(form.nomClient, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.emailClient, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.noteProduit, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.commentaires, {'attr': {'class': 'form-control', 'placeholder': 'Commentaires'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.dateSoumission, {'attr': {'class': 'form-control', 'placeholder': 'Date de soumission'}}) }}
        </div>
        <br>
{#        {{ form_end(form) }}#}
        <button type="submit" class="btn btn-primary">Enregistrer</button>


    </div>
{% endblock %}
